<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UVG">
    <parameter name="includeGroup" value="{{includeGroup}}"/>
    <parameter name="apiHost" value="{{apiHost}}"/>
    <parameter name="seleniumHost" value="{{seleniumHost}}"/>
    <parameter name="browser" value="{{browser}}"/>
    <test name="TestCases UVG">
        <groups>
            <run>
                {% for group in includeGroup.split(",") -%}
                <include name="{{ group }}"/>
                {% endfor -%}
            </run>
        </groups>
        <classes>
            <class name="apiTesting.APITest"/>
            <class name="systemTesting.uvg.pomSolid.CreateUserPomSolidTests"/>
            <class name="systemTesting.MyFistSeleniumTest"/>
/            <class name="systemTesting.uvg.firstsTests.MyFirstStepsWithSelenium"/>
            <class name="systemTesting.uvg.firstsTests.ExplicitWaits"/>
        </classes>
    </test>

    <listeners>
        <listener class-name="listeners.UVGListener"/>
    </listeners>
</suite>